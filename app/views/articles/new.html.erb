<h1>NEW CREATE</h1>

<%= form_with url: articles_path, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :title, :placeholder => "タイトル", style: "background-color:transparent; border-color: black", size: 30 %>
  </div>
  <div class="form-group">
    <%= f.radio_button :radio_category, "existing_category", {:checked => true} %>既存のカテゴリーから選択<br>
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.radio_button :radio_category, "new_category" %>新しくカテゴリーを作成<br>
    <%= f.text_field :name, :placeholder => "カテゴリー", style: "background-color:transparent; border-color: black", size: 30 %>
  </div>
  <div class="form-group">
    <%#= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, :placeholder => "本文", style: "background-color:transparent; border-color: black", size: "30x10" %>
  </div>
  <div class="form-group">
    <%= f.submit "保存" %>
  </div>
<% end %>
