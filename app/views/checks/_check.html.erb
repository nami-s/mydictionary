<div class="row justify-content-center article">
  <%= link_to "Click after reading", article_checks_path(article), method: :post, remote: true, class: "btn btn-outline-dark" %>
</div>
<div class="row justify-content-center pt-1">
  <b>I checked this page <%= article.checks.count %> times</b>
</div>
<div class="row justify-content-center article">
  The day I read this book
</div>
<div class="row justify-content-center">
  <table>
    <tbody>
    <% article.checks.each do |check| %>
      <tr class="check_<%= check.id %>">
        <td><%= check.created_at.strftime('%Y.%m.%d') %></td>
        <td class="pl-3" style="font-size: 15px;">
          <%= link_to "削除", article_check_path(check.article,check), method: :delete, remote: true, data: {confirm: "削除しますか？"}, class: "text-dark" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
