<%= form_with(model: schedule, remote: true) do |form| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>
      <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row scheduleform">
    <div class="col-5 text-right">
      <%= form.label :予定名 %>
    </div>
    <div class="col-5">
      <%= form.text_field :title, style: "background-color: transparent; border-color: black; border-width: 1px;", size: 20 %>
    </div>
  </div>
  <div class="row scheduleform">
    <div class="col-5 text-right">
    <%= form.label :予定内容 %>
    </div>
    <div class="col-5">
      <%= form.text_area :description, style: "background-color: transparent; border-color: black", size: "20x5" %>
    </div>
  </div>
  <div class="row scheduleform">
    <div class="col-5 text-right">
      <%= form.label :開始時間 %>
    </div>
    <div class="col-5">
      <%= form.datetime_field :start, :placeholder => "日時", class: "flatpickr", readonly: "", style: "background-color: transparent; border-color: black; border-width: 1px;", size: 20 %>
    </div>
  </div>
  <div class="row scheduleform">
    <div class="col-5 text-right">
      <%= form.label :終了時間 %>
    </div>
    <div class="col-5">
      <%= form.datetime_field :end, :placeholder => "日時", class: "flatpickr", readonly: "", style: "background-color: transparent; border-color: black; border-width: 1px;", size: 20 %>
    </div>
  </div>
  <div class="row justify-content-end scheduleform">
    <%= form.submit " 登録 ", style: "background-color: transparent; border-color: black; border-width: 1px;", class: "mb-4 mr-5" %>
  </div>
<% end %>