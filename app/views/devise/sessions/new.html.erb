<div class="container pt-5 devise">
  <div class="row justify-content-center" style="padding-top: 50px;">
    <h1>ログイン</h1>
  </div>
  <div class="row justify-content-center pt-5">
    <div class="col text-center">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    　<% end %>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="row justify-content-center">
        <div class="field text-left pb-1">
          <%= f.label :メールアドレス %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "background-color:transparent; border-color: black; border-width: 1px;" %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="field text-left pb-1">
          <%= f.label :パスワード %><br>
          <%= f.password_field :password, autocomplete: "current-password", style: "background-color:transparent; border-color: black; border-width: 1px;" %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="field text-right pt-3">
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          <% end %>
        </div>
      </div><br>
      <div class="row justify-content-center">
        <div class="col-6 text-center">
          <%= f.submit " ログイン ", class: "btn  bg-transparent btn-outline-dark" %>
        </div>
      </div>
      <% end %>
      <div class="row justify-content-center">
        <div class="col text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
